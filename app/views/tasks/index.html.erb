<h1>Tasks#index</h1>
<p>Find me in app/views/tasks/index.html.erb</p>

<%= link_to "new", new_task_path %>


<% @tasks.each do |task| %>
<%= link_to "edit", edit_task_path(task) %>
  <h2><%= task.name %></h2>
  <p><%= task.pay %></p>
  <p><%= task.completed %></p>
  <p><%= task.location %></p>
  <p><%= task.id %></p>
  <%= link_to "Delete", task_path(task),
      method: :delete,
      data: { confirm: "Are you sure?" } %>
<% end %>
